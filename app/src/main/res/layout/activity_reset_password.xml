<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C91FB25F"
    tools:context=".ResetPasswordActivity">

    <EditText
        android:id="@+id/confirmNewPasswordEditText"
        android:layout_width="410dp"
        android:layout_height="58dp"
        android:layout_marginTop="100dp"
        android:background="#136F77"
        android:ems="10"
        android:hint="Confirm new password"
        android:inputType="textPassword"
        android:textColor="#EFE7E7"
        android:textColorHint="#F6F0F0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newpasswordEditText"
        android:layout_width="410dp"
        android:layout_height="58dp"
        android:background="#136F77"
        android:ems="10"
        android:hint="Enter new password"
        android:inputType="textPassword"
        android:textColor="#F3EBEB"
        android:textColorHint="#FAF6F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changePasswordBtn"
        android:layout_width="212dp"
        android:layout_height="58dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="128dp"
        android:text="Change password"
        android:background="@drawable/my_button"
        android:backgroundTint="#8FDDDF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmNewPasswordEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>