<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C91FB25F"
    tools:context=".RegisterActivity">

    <CheckBox
        android:id="@+id/patientCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="264dp"
        android:layout_marginTop="508dp"
        android:text="Patient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/confirmPasswiordEditText"
        android:layout_width="387dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="328dp"
        android:background="#136F77"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPersonName"
        android:textColor="#F8F4F4"
        android:textColorHint="#EAE5E5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordRegisEditText"
        android:layout_width="387dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="232dp"
        android:background="#136F77"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textColor="#F3F2F2"
        android:textColorHint="#F8F0F0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailRegisEditText"
        android:layout_width="387dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="140dp"
        android:background="#136F77"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="#F8F4F4"
        android:textColorHint="#F6F0F0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fullnameEditText"
        android:layout_width="387dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:background="#136F77"
        android:ems="10"
        android:hint="Full name"
        android:inputType="textPersonName"
        android:textColor="#F8F7F7"
        android:textColorHint="#F8F5F5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="236dp"
        android:onClick="signInOnClk"
        android:background="@drawable/my_button"
        android:backgroundTint="#8FDDDF"
        android:text="Sign in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswiordEditText" />

    <CheckBox
        android:id="@+id/careTakerCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="264dp"
        android:layout_marginTop="424dp"
        android:text="Caretaker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roleErrorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="444dp"
        android:text="Please Select your role!!"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>